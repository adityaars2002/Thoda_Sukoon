<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AiSupport">

    <LinearLayout
        android:id="@+id/ai_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?attr/colorSurface"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="80dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/ic_bot"
                android:contentDescription="bot icon"
                app:tint="?attr/colorPrimary" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:paddingLeft="12dp">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AI Mental Health Support"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface" />

                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Confidential â€¢ Available 24/7"
                    android:textSize="13sp"
                    android:textColor="?attr/colorOnSurfaceVariant" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnAlert"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/alert_circle_bg"
                android:padding="8dp"
                android:src="@drawable/ic_crisis"
                android:contentDescription="alert"
                app:tint="@android:color/white" />
        </LinearLayout>

        <!-- Thin divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorOutlineVariant"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <!-- Messages list -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMessages"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingTop="8dp"
            android:paddingBottom="8dp" />

        <!-- Bottom input bar -->
        <LinearLayout
            android:id="@+id/input_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="?attr/colorSurfaceVariant"
                android:paddingLeft="18dp"
                android:paddingRight="12dp">

                <EditText
                    android:id="@+id/etMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Share what's on your mind..."
                    android:background="?attr/colorSurfaceVariant"
                    android:imeOptions="actionSend"
                    android:inputType="textMultiLine"
                    android:maxLines="3"
                    android:textColor="?attr/colorOnSurface"
                    android:textColorHint="?attr/colorOnSurfaceVariant"/>
            </LinearLayout>

            <ImageButton
                android:id="@+id/btnSend"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/circle_icon_bg"
                android:src="@drawable/ic_send"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:contentDescription="send"
                app:tint="?attr/colorPrimary" />
        </LinearLayout>

        <!-- Informational note -->
        <TextView
            android:id="@+id/tvNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This AI companion provides general support only. For emergencies, seek immediate professional help."
            android:textSize="12sp"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:gravity="center"
            android:layout_marginTop="4dp"/>
    </LinearLayout>
</RelativeLayout>
